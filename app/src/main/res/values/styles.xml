<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorForLogin</item>
        <item name="colorPrimaryDark">@color/colorForLogin</item>
        <item name="colorAccent">@color/colorForLogin</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#7A7B80</item>
        <item name="colorPrimaryDark">#7A7B80</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/race</item>

    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorForLogin</item>
        <item name="colorPrimaryDark">@color/colorForLogin</item>
        <item name="colorAccent">@color/colorForLogin</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#004AAD</item>
        <item name="colorPrimaryDark">#004AAD</item>
        <item name="colorAccent">#004AAD</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/colorLoginDark</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>


</resources>
