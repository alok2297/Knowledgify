<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#D6D6D6D6"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/maintain"
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            
            android:layout_height="wrap_content"
            android:text="UNDER MAINTENANCE" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Books will be updated soon." />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="STAY CONNECTED! Please support us by RATING THIS APP." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#AF3FA9"
            android:textColor="@color/colorBlack"
            android:elevation="20dp"
            android:text="BACK" />
            <!--                android:background="@drawable/rounded_button1"-->

            <Button
                android:id="@+id/Review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorBlack"
                android:elevation="20dp"
                android:backgroundTint="#AF3FA9"
            android:layout_weight="1"
            android:text="Review" />
            <!--                android:background="@drawable/rounded_button1"-->
        </LinearLayout>
        <com.yodo1.mas.banner.Yodo1MasBannerAdView
            xmlns:masads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/yodo1_mas_banner"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal"
            masads:adSize="Banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>